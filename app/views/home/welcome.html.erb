<div class="container-fluid">
  <% @start_date = @start_date.tr("-", "") %>
  <div class="content">

    <img id="livestream" src="http://10.0.0.140:8081/" alt="http://10.0.0.140:8081/" onerror="errorimg_swap()">

    <div class="filters">
      <form action="/">
        <input name="perpage" type="number" value="" onchange="this.form.submit()" placeholder="Items per page: <%= cookies[:per_page] %>">
      </form>
      <form action="/">
        <input name="date" type="date" value="<%= cookies[:date] %>" onchange="this.form.submit()" placeholder="Start date:"><input type="submit" value="Filter">
      </form>
    </div>

  </div>

  <div class="row">
    <%
      post_page = 0
      @start_date.tr("-", "")
      startindex = @images.find_index(@start_date).to_i

      @images.drop(@current_page*@per_page+startindex).each_with_index do |image, i|
        post_page += 1 %>
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
          <div class="thumbnail">
            <img src="<%= image_url(image.gsub("app/assets/images/webcam/", "webcam/")) %>" onmouseover="recorded_play(<%= image.gsub("app/assets/images/webcam/", "") %>)">
          </div>
        </div>
    <% if post_page >= @per_page
         break
       end
       end
    %>

  </div>
</div>
<div class="pangination navbar-static-bottom">
  <%= render "home/pangionation" %>
</div>