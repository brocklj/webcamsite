
<div class="container-fluid">
  <div class="content">
    <div class="row">
        <a class="btn" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="streamContent" href="#streamContent" aria-label="Left Align">
          <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>Open Live</a>
        <div class="well">
        <div class="collapse" id="streamContent">

              <img id="livestream" src="http://10.0.0.140:8081/" alt="http://10.0.0.140:8081/" onerror="errorimg_swap()">

         </div>

        <div class="filters">
          <div id="temp"></div>
          <!-- filters form start -->
          <%= form_with(controller: :home) do |f| %>
            <div class="container">
              <div class="row">

                <div class='col-md-4 col-sm-12'>
                <div class="form-group">
                  <div class='input-group date' id='datetimepicker6'>
                    <span class="input-group-addon">From</span>
                    <input type='text' class="form-control" name="from_date" id="from_date" value="<%= cookies[:from_date] %>"/>
                    <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                  </div>
                </div>
              </div>

                <div class='col-md-4 col-sm-12'>
                  <div class="form-group">
                    <div class='input-group date' id='datetimepicker7'>
                      <span class="input-group-addon">To</span>
                      <input type='text' class="form-control" name="to_date" id="to_date" value="<%= cookies[:to_date] %>"/>
                      <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                    </div>
                  </div>
              </div>
              <!-- PER PAGE FORM -->

                <div class='col-md-4 col-sm-12'>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">per page</span>
                      <input name="perpage" class="form-control" size="3" type='text' value="<%= cookies[:per_page] == '' ? @per_page : cookies[:per_page] %>"/>

                          <span class="input-group-addon">
                            <div class="btn-group btn-group-xs">
                      <button type="button" class="btn btn-default" id="reset_btn">reset</button>
                              </div>
                            </span>
                          <span class="input-group-addon">
                            <div class="btn-group btn-group-xs">
                      <button type="submit" class="btn btn-primary">show</button>
                              </div>
                        </span>


                    </div>

                    </div>
                  </div>

              <!--/end/ PER PAGE FORM -->
              </div>
            </div>
            <!-- filters form end -->
          <% end %>

        </div>
      </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <%
      post_page = 0
      @images.drop(@current_page*@per_page).each_with_index do |image, i|
        post_page += 1 %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <div class="thumbnail img_stored">
            <div class="caption">
              <normal><%= get_mtime("app/assets/images/webcam/#{image}") %></normal>
            </div>
            <img src="<%= image_url("webcam/#{image}") %>">

          </div>
        </div>
    <% if post_page >= @per_page
         break
       end
       end
    %>
  </div>
</div>
<div class="pangination navbar-static-bottom">
  <%= render "home/pangionation" %>
</div>